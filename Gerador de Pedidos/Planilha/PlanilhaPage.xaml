<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerador_de_Pedidos.PlanilhaPage"
             
         Title="Planilha Garantia">


    <StackLayout>
        <!-- Toolbar com botÃµes de controle -->
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Text="Back" Clicked="OnBackClicked" Grid.Column="0"/>
            <Button Text="Forward" Clicked="OnForwardClicked" Grid.Column="1"/>

            <Button Text="Reload" Clicked="OnReloadClicked" Grid.Column="2"/>
            <Button Text="Settings" Clicked="OnSettingsClicked" Grid.Column="3"/>
            
            
        </Grid>

        <!-- WebView -->
        <WebView 
          
        x:Name="linkPlanilhaWebView"
        Source= ""
                  VerticalOptions="FillAndExpand" />
    </StackLayout>

</ContentPage>