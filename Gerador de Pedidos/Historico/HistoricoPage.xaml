<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerador_de_Pedidos.Historico.HistoricoPage"
             Shell.NavBarIsVisible="False"
             Title="HistoricoPage"
             BackgroundColor="#F8F9FB">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Título da página -->
            <Label Text="Orders" FontSize="32" FontAttributes="Bold" 
                   HorizontalOptions="Start" TextColor="#222"/>

            <!-- Filtros de Status -->
            <HorizontalStackLayout Spacing="10" Margin="0,10,0,20">
                <Button Text="Pending 12" BackgroundColor="#E0E0E0" CornerRadius="20"/>
                <Button Text="Responded 8" BackgroundColor="#E0E0E0" CornerRadius="20"/>
                <Button Text="Assigned 13" BackgroundColor="#007AFF" TextColor="White" CornerRadius="20"/>
                <Button Text="Completed 82" BackgroundColor="#E0E0E0" CornerRadius="20"/>
            </HorizontalStackLayout>

            <!-- Lista de Pedidos -->
            <CollectionView x:Name="listaprodutos" Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="20" Margin="10" BorderColor="#ddd" CornerRadius="15" 
                               BackgroundColor="#FFFFFF" HasShadow="True">
                            <Grid Padding="10" RowSpacing="5" ColumnDefinitions="*, *,*, *,*, *,*" RowDefinitions="Auto, *">
                                <!-- Colunas para Labels -->
                                <Label Text="Numero do pedido" FontAttributes="Bold" TextColor="#888" Grid.Row="0" Grid.Column="0"/>
                                <Label Text="Tipo de pedido" FontAttributes="Bold" TextColor="#888" Grid.Row="0" Grid.Column="1"/>
                                <Label Text="Vendedor" FontAttributes="Bold" TextColor="#888" Grid.Row="0" Grid.Column="2"/>
                                <Label Text="Tipo frete" FontAttributes="Bold" TextColor="#888" Grid.Row="0" Grid.Column="3"/>
                                <Label Text="Tipo pagamento" FontAttributes="Bold" TextColor="#888" Grid.Row="0" Grid.Column="4"/>
                                <Label Text="Data pedido" FontAttributes="Bold" TextColor="#888" Grid.Row="0" Grid.Column="5"/>

                                <!-- Colunas para dados -->
                                <Label Text="{Binding NumeroPedido}" FontSize="18" TextColor="#222" Grid.Row="1" Grid.Column="0"/>
                                <Label Text="{Binding TipoPedido}" FontSize="18" TextColor="#222" Grid.Row="1" Grid.Column="1"/>
                                <Label Text="{Binding Vendedor}" FontSize="18" TextColor="#222" Grid.Row="1" Grid.Column="2"/>
                                <Label Text="{Binding TipoFrete}" FontSize="18" TextColor="#222" Grid.Row="1" Grid.Column="3"/>
                                <Label Text="{Binding TipoPagamento}" FontSize="18" TextColor="#222" Grid.Row="1" Grid.Column="4"/>
                                <Label Text="{Binding DataPedido}" FontSize="18" TextColor="#222" Grid.Row="1" Grid.Column="5"/>

                                <Button Grid.Column="6" Grid.Row="0"></Button>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
