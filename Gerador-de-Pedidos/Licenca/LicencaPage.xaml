<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gerador_de_Pedidos.Licenca.LicencaPage"
             Shell.NavBarIsVisible="False"
             Shell.BackgroundColor="White"
             Title="Licença Expirada">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Estilo para os Labels -->
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>

            <Style x:Key="HeaderPickerStyleplanilha" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="BackgroundColor" Value="#00c4b4"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>

            <!-- Estilo para os Pickers -->
            <Style x:Key="HeaderPickerStyle" TargetType="Picker">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="BackgroundColor" Value="#00c4b4"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style x:Key="AlternatingBackgroundStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#ffffff"/>
                <Setter Property="BorderColor" Value="Transparent"/>
                <Setter Property="Padding" Value="100"/>
            </Style>



        </ResourceDictionary>
    </ContentPage.Resources>
    <Frame 
             BackgroundColor="#333333"
CornerRadius="10" 
             
             BorderColor="#00c4b4"
HasShadow="True" 
Padding="0"
>
        <Frame.Shadow>
            <Shadow Brush="Black" Opacity="0.5" Radius="10" Offset="10,10"/>
        </Frame.Shadow>
        <!-- Seção de entrada de dados -->
        <ScrollView>
            <VerticalStackLayout Padding="0" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">

                <Label 
            Text="A licença do aplicativo está vencida."
            FontSize="24"
            TextColor="White"
            FontAttributes="Bold"
            HorizontalOptions="Center" 
            VerticalOptions="Center" />

                <Label 
            Text="Entre em contato com o suporte para renovar sua licença."
            FontSize="18"
            TextColor="Black"
            HorizontalOptions="Center" 
            VerticalOptions="Center" />

            </VerticalStackLayout>
        </ScrollView>
    </Frame>

</ContentPage>
